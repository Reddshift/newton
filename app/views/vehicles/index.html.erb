<p id="notice"><%= notice %></p>

<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Drag c</th>
      <th>Drag area</th>
      <th>Friction c ground</th>
      <th>Friction c trans</th>
      <th>Mass</th>
      <th>Wheel diameter</th>
      <th>Gear ratio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.name %></td>
        <td><%= vehicle.drag_c %></td>
        <td><%= vehicle.drag_area %></td>
        <td><%= vehicle.friction_c_ground %></td>
        <td><%= vehicle.friction_c_trans %></td>
        <td><%= vehicle.mass %></td>
        <td><%= vehicle.wheel_diameter %></td>
        <td><%= vehicle.gear_ratio %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

